{
  "name": "back",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "npm run migrate-up && nodemon -r esm ./src/index.js",
    "lint": "node_modules/eslint/bin/eslint.js ./src --fix",
    "migrate-up": "./node_modules/migrate/bin/migrate up -- --store='./src/utils/migration_engine.esm.js' --matches '*.js'",
    "migrate-down": "./node_modules/migrate/bin/migrate down -- --store='./src/utils/migration_engine.esm.js' --matches '*.js'",
    "docker-clean": "docker stop `docker ps -qa` && docker rm `docker ps -qa`"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.0",
    "bcrypt": "^4.0.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "core-js": "3",
    "cron": "^1.8.2",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "http-status": "^1.4.2",
    "jsonwebtoken": "^8.5.1",
    "log4js": "^6.1.2",
    "migrate": "^1.6.2",
    "mongoose": "^5.9.2",
    "mongoose-simple-random": "^0.4.1",
    "nodemon": "^2.0.2",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "socketio": "^1.0.0",
    "uuid": "^3.4.0"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "husky": "^4.2.3"
  },
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
